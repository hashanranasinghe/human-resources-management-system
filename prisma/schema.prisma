generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SUPERADMIN
  ADMIN
  SUPERVISOR
  INTERN
}

model Employee {
  id           Int          @id @default(autoincrement())
  name         String
  position     String
  hireDate     DateTime
  role         Role
  email        String       @unique
  departmentId Int
  password     String
  department   Department[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String
  managerId Int
  employee  Employee @relation(fields: [managerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
